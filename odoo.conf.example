[options]
; Cấu hình Odoo 19.0 cho Công ty May
; Sao chép file này thành odoo.conf và điền thông tin thực tế
admin_passwd = YOUR_ADMIN_PASSWORD
db_host = db
db_port = 5432
db_user = odoo
db_password = YOUR_DB_PASSWORD
db_name = garment_db

; Đường dẫn addons
addons_path = /usr/lib/python3/dist-packages/odoo/addons,/mnt/extra-addons

; Server
http_port = 8069
http_interface = 0.0.0.0
proxy_mode = False

; Logging
logfile = /var/log/odoo/odoo.log
log_level = info
log_handler = :INFO

; Performance
workers = 2
max_cron_threads = 1
limit_memory_hard = 2684354560
limit_memory_soft = 2147483648
limit_time_cpu = 600
limit_time_real = 1200

; Cron
; limit_time_real_cron = 1800
