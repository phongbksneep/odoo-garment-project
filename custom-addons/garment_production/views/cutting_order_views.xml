<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cutting_order_form" model="ir.ui.view">
        <field name="name">garment.cutting.order.form</field>
        <field name="model">garment.cutting.order</field>
        <field name="arch" type="xml">
            <form string="Lệnh Cắt">
                <header>
                    <button name="action_confirm" string="Xác Nhận" type="object"
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_start_cutting" string="Bắt Đầu Cắt" type="object"
                            class="btn-primary" invisible="state != 'confirmed'"/>
                    <button name="action_done" string="Hoàn Thành" type="object"
                            class="btn-success" invisible="state != 'cutting'"/>
                    <button name="action_cancel" string="Hủy" type="object"
                            invisible="state in ('done', 'cancelled')"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirmed,cutting,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="production_order_id"/>
                            <field name="garment_order_id"/>
                            <field name="style_id"/>
                            <field name="cutting_date"/>
                            <field name="cutter_id"/>
                        </group>
                        <group>
                            <field name="fabric_id"/>
                            <field name="color_id"/>
                            <field name="planned_qty"/>
                            <field name="layers"/>
                            <field name="fabric_consumption"/>
                            <field name="waste_percentage"/>
                            <field name="total_fabric"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_cutting_order_list" model="ir.ui.view">
        <field name="name">garment.cutting.order.list</field>
        <field name="model">garment.cutting.order</field>
        <field name="arch" type="xml">
            <list string="Lệnh Cắt">
                <field name="name"/>
                <field name="production_order_id"/>
                <field name="style_id"/>
                <field name="fabric_id"/>
                <field name="color_id"/>
                <field name="planned_qty"/>
                <field name="total_fabric"/>
                <field name="cutting_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="action_cutting_order" model="ir.actions.act_window">
        <field name="name">Lệnh Cắt</field>
        <field name="res_model">garment.cutting.order</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Tạo lệnh cắt mới</p>
        </field>
    </record>
</odoo>
