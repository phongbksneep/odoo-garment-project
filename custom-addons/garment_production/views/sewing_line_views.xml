<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sewing_line_form" model="ir.ui.view">
        <field name="name">garment.sewing.line.form</field>
        <field name="model">garment.sewing.line</field>
        <field name="arch" type="xml">
            <form string="Chuyền May">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="line_type"/>
                            <field name="manager_id"/>
                            <field name="location"/>
                        </group>
                        <group>
                            <field name="worker_count"/>
                            <field name="machine_count"/>
                            <field name="capacity_per_day"/>
                            <field name="efficiency"/>
                            <field name="state"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Công Nhân">
                            <field name="worker_ids"/>
                        </page>
                        <page string="Ghi Chú">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_sewing_line_list" model="ir.ui.view">
        <field name="name">garment.sewing.line.list</field>
        <field name="model">garment.sewing.line</field>
        <field name="arch" type="xml">
            <list string="Chuyền May">
                <field name="code"/>
                <field name="name"/>
                <field name="line_type"/>
                <field name="manager_id"/>
                <field name="worker_count"/>
                <field name="machine_count"/>
                <field name="capacity_per_day"/>
                <field name="efficiency"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="action_sewing_line" model="ir.actions.act_window">
        <field name="name">Chuyền May</field>
        <field name="res_model">garment.sewing.line</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Thêm chuyền may mới</p>
        </field>
    </record>
</odoo>
