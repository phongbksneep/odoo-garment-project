<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_production_order_form" model="ir.ui.view">
        <field name="name">garment.production.order.form</field>
        <field name="model">garment.production.order</field>
        <field name="arch" type="xml">
            <form string="Lệnh Sản Xuất">
                <header>
                    <button name="action_confirm" string="Xác Nhận" type="object"
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_start" string="Bắt Đầu SX" type="object"
                            class="btn-primary" invisible="state != 'confirmed'"/>
                    <button name="action_done" string="Hoàn Thành" type="object"
                            class="btn-success" invisible="state != 'in_progress'"/>
                    <button name="action_cancel" string="Hủy" type="object"
                            invisible="state in ('done', 'cancelled')"/>
                    <button name="action_reset_draft" string="Đặt Lại" type="object"
                            invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirmed,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="garment_order_id"/>
                            <field name="style_id"/>
                            <field name="customer_id"/>
                            <field name="sewing_line_id"/>
                        </group>
                        <group>
                            <field name="planned_qty"/>
                            <field name="completed_qty"/>
                            <field name="defect_qty"/>
                            <field name="completion_rate" widget="progressbar"/>
                            <field name="sam"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="actual_end_date"/>
                        </group>
                        <group>
                            <field name="is_overdue"/>
                            <field name="delay_days" invisible="not is_overdue"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Sản Lượng Hàng Ngày">
                            <field name="daily_output_ids">
                                <list editable="bottom">
                                    <field name="date"/>
                                    <field name="shift"/>
                                    <field name="target_qty"/>
                                    <field name="output_qty"/>
                                    <field name="defect_qty"/>
                                    <field name="rework_qty"/>
                                    <field name="worker_count"/>
                                    <field name="working_hours"/>
                                    <field name="efficiency"/>
                                    <field name="defect_rate"/>
                                    <field name="pieces_per_hour"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                        <page string="Ghi Chú">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_production_order_list" model="ir.ui.view">
        <field name="name">garment.production.order.list</field>
        <field name="model">garment.production.order</field>
        <field name="arch" type="xml">
            <list string="Lệnh Sản Xuất" decoration-info="state == 'draft'"
                  decoration-warning="state == 'in_progress'"
                  decoration-success="state == 'done'"
                  decoration-danger="is_overdue == True">
                <field name="name"/>
                <field name="garment_order_id"/>
                <field name="style_id"/>
                <field name="customer_id"/>
                <field name="sewing_line_id"/>
                <field name="planned_qty" sum="Tổng KH"/>
                <field name="completed_qty" sum="Tổng HT"/>
                <field name="defect_qty" sum="Tổng Lỗi"/>
                <field name="completion_rate" widget="progressbar"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="is_overdue" column_invisible="True"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'"
                       decoration-warning="state in ('confirmed', 'in_progress')"
                       decoration-success="state == 'done'"/>
            </list>
        </field>
    </record>

    <record id="view_production_order_search" model="ir.ui.view">
        <field name="name">garment.production.order.search</field>
        <field name="model">garment.production.order</field>
        <field name="arch" type="xml">
            <search string="Tìm Lệnh SX">
                <field name="name"/>
                <field name="garment_order_id"/>
                <field name="customer_id"/>
                <field name="sewing_line_id"/>
                <filter string="Đang SX" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Hoàn Thành" name="done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter string="Quá Hạn" name="overdue" domain="[('is_overdue', '=', True)]"/>
                <filter string="Tháng Này" name="this_month" domain="[('start_date', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%%Y-%%m-%%d')), ('start_date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%%Y-%%m-%%d'))]"/>
                <group>
                    <filter string="Chuyền May" name="group_line" context="{'group_by': 'sewing_line_id'}"/>
                    <filter string="Khách Hàng" name="group_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Trạng Thái" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Đơn Hàng" name="group_order" context="{'group_by': 'garment_order_id'}"/>
                    <filter string="Mẫu May" name="group_style" context="{'group_by': 'style_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_production_order" model="ir.actions.act_window">
        <field name="name">Lệnh Sản Xuất</field>
        <field name="res_model">garment.production.order</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Tạo lệnh sản xuất mới</p>
        </field>
    </record>
</odoo>
