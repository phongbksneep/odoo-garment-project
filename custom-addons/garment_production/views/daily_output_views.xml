<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_daily_output_form" model="ir.ui.view">
        <field name="name">garment.daily.output.form</field>
        <field name="model">garment.daily.output</field>
        <field name="arch" type="xml">
            <form string="Sản Lượng Ngày">
                <sheet>
                    <group>
                        <group>
                            <field name="production_order_id"/>
                            <field name="sewing_line_id"/>
                            <field name="date"/>
                            <field name="shift"/>
                        </group>
                        <group>
                            <field name="target_qty"/>
                            <field name="output_qty"/>
                            <field name="defect_qty"/>
                            <field name="rework_qty"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="worker_count"/>
                            <field name="working_hours"/>
                        </group>
                        <group>
                            <field name="efficiency" readonly="1"/>
                            <field name="defect_rate" readonly="1"/>
                            <field name="pieces_per_hour" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_daily_output_list" model="ir.ui.view">
        <field name="name">garment.daily.output.list</field>
        <field name="model">garment.daily.output</field>
        <field name="arch" type="xml">
            <list string="Sản Lượng Hàng Ngày"
                  decoration-danger="defect_rate &gt; 5"
                  decoration-warning="efficiency &lt; 80 and efficiency &gt; 0">
                <field name="date"/>
                <field name="production_order_id"/>
                <field name="sewing_line_id"/>
                <field name="shift"/>
                <field name="target_qty" sum="Tổng MT"/>
                <field name="output_qty" sum="Tổng SL"/>
                <field name="defect_qty" sum="Tổng Lỗi"/>
                <field name="efficiency" avg="Avg"/>
                <field name="defect_rate" avg="Avg"/>
                <field name="pieces_per_hour" avg="Avg"/>
            </list>
        </field>
    </record>

    <record id="view_daily_output_search" model="ir.ui.view">
        <field name="name">garment.daily.output.search</field>
        <field name="model">garment.daily.output</field>
        <field name="arch" type="xml">
            <search string="Tìm Sản Lượng">
                <field name="production_order_id"/>
                <field name="sewing_line_id"/>
                <filter string="Hôm Nay" name="today" domain="[('date', '=', context_today().strftime('%%Y-%%m-%%d'))]"/>
                <filter string="Tuần Này" name="this_week" domain="[('date', '&gt;=', (context_today() - relativedelta(days=context_today().weekday())).strftime('%%Y-%%m-%%d'))]"/>
                <group>
                    <filter string="Chuyền May" name="group_line" context="{'group_by': 'sewing_line_id'}"/>
                    <filter string="Ngày" name="group_date" context="{'group_by': 'date'}"/>
                    <filter string="Ca" name="group_shift" context="{'group_by': 'shift'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_daily_output_pivot" model="ir.ui.view">
        <field name="name">garment.daily.output.pivot</field>
        <field name="model">garment.daily.output</field>
        <field name="arch" type="xml">
            <pivot string="Sản Lượng Hàng Ngày">
                <field name="sewing_line_id" type="row"/>
                <field name="date" type="col" interval="week"/>
                <field name="output_qty" type="measure"/>
                <field name="defect_qty" type="measure"/>
                <field name="efficiency" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View – Trend line over time -->
    <record id="view_daily_output_graph" model="ir.ui.view">
        <field name="name">garment.daily.output.graph</field>
        <field name="model">garment.daily.output</field>
        <field name="arch" type="xml">
            <graph string="Xu Hướng Sản Lượng" type="line">
                <field name="date" interval="day"/>
                <field name="sewing_line_id"/>
                <field name="output_qty" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="action_daily_output" model="ir.actions.act_window">
        <field name="name">Sản Lượng Hàng Ngày</field>
        <field name="res_model">garment.daily.output</field>
        <field name="view_mode">list,graph,pivot,form</field>
        <field name="context">{'search_default_today': 1}</field>
    </record>
</odoo>
