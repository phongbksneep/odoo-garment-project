<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_garment_order_form" model="ir.ui.view">
        <field name="name">garment.order.form</field>
        <field name="model">garment.order</field>
        <field name="arch" type="xml">
            <form string="Đơn Hàng May">
                <header>
                    <button name="action_confirm" string="Xác Nhận" type="object"
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_material" string="Chuẩn Bị NL" type="object"
                            class="btn-primary" invisible="state != 'confirmed'"/>
                    <button name="action_cutting" string="Cắt" type="object"
                            class="btn-primary" invisible="state != 'material'"/>
                    <button name="action_sewing" string="May" type="object"
                            class="btn-primary" invisible="state != 'cutting'"/>
                    <button name="action_finishing" string="Hoàn Thiện" type="object"
                            class="btn-primary" invisible="state != 'sewing'"/>
                    <button name="action_qc" string="Kiểm Tra CL" type="object"
                            class="btn-primary" invisible="state != 'finishing'"/>
                    <button name="action_packing" string="Đóng Gói" type="object"
                            class="btn-primary" invisible="state != 'qc'"/>
                    <button name="action_shipped" string="Đã Giao" type="object"
                            class="btn-primary" invisible="state != 'packing'"/>
                    <button name="action_done" string="Hoàn Thành" type="object"
                            class="btn-success" invisible="state != 'shipped'"/>
                    <button name="action_cancel" string="Hủy" type="object"
                            invisible="state in ('done', 'cancelled')"/>
                    <button name="action_reset_draft" string="Đặt Lại Nháp" type="object"
                            invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirmed,cutting,sewing,finishing,qc,packing,shipped,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <widget name="web_ribbon" title="Trễ Hạn" bg_color="text-bg-danger"
                            invisible="not is_late"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <field name="is_late" invisible="1"/>
                    <group>
                        <group>
                            <field name="customer_id"/>
                            <field name="customer_po"/>
                            <field name="style_id"/>
                            <field name="order_date"/>
                            <field name="delivery_date"/>
                        </group>
                        <group>
                            <field name="unit_price"/>
                            <field name="currency_id"/>
                            <field name="incoterm"/>
                            <field name="payment_term"/>
                            <field name="total_qty" readonly="1"/>
                            <field name="total_amount" readonly="1"/>
                            <field name="days_remaining" readonly="1"
                                   decoration-danger="days_remaining &lt; 0"
                                   decoration-warning="days_remaining &gt;= 0 and days_remaining &lt;= 7"
                                   decoration-success="days_remaining &gt; 7"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Chi Tiết Size/Màu">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="color_id"/>
                                    <field name="size_id"/>
                                    <field name="quantity"/>
                                    <field name="unit_price" readonly="1"/>
                                    <field name="subtotal" readonly="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Thông Tin Giao Hàng">
                            <group>
                                <field name="destination_port"/>
                                <field name="shipping_mark"/>
                            </group>
                        </page>
                        <page string="Ghi Chú">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_garment_order_list" model="ir.ui.view">
        <field name="name">garment.order.list</field>
        <field name="model">garment.order</field>
        <field name="arch" type="xml">
            <list string="Đơn Hàng May" decoration-info="state == 'draft'"
                  decoration-warning="state in ('cutting', 'sewing')"
                  decoration-success="state == 'done'"
                  decoration-danger="state == 'cancelled' or is_late">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="customer_po" optional="show"/>
                <field name="style_id"/>
                <field name="order_date"/>
                <field name="delivery_date"/>
                <field name="total_qty" sum="Tổng"/>
                <field name="total_amount" sum="Tổng Tiền"/>
                <field name="days_remaining"
                       decoration-danger="days_remaining &lt; 0"
                       decoration-warning="days_remaining &gt;= 0 and days_remaining &lt;= 7"
                       decoration-success="days_remaining &gt; 7"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state in ('cutting', 'sewing', 'finishing')"
                       decoration-success="state == 'done'"
                       decoration-danger="state == 'cancelled'"/>
                <field name="is_late" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_garment_order_search" model="ir.ui.view">
        <field name="name">garment.order.search</field>
        <field name="model">garment.order</field>
        <field name="arch" type="xml">
            <search string="Tìm Đơn Hàng">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="customer_po"/>
                <field name="style_id"/>
                <filter string="Nháp" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Đã Xác Nhận" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Đang Sản Xuất" name="production"
                        domain="[('state', 'in', ('cutting', 'sewing', 'finishing'))]"/>
                <filter string="Hoàn Thành" name="done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter string="Trễ Hạn" name="late"
                        domain="[('is_late', '=', True)]"/>
                <filter string="Gấp (&lt;7 ngày)" name="urgent"
                        domain="[('delivery_date', '&gt;=', context_today().strftime('%%Y-%%m-%%d')),
                                 ('delivery_date', '&lt;=', (context_today() + relativedelta(days=7)).strftime('%%Y-%%m-%%d')),
                                 ('state', 'not in', ('done', 'cancelled'))]"/>
                <separator/>
                <filter string="Giao Tháng Này" name="delivery_this_month"
                        domain="[('delivery_date', '&gt;=', (context_today()).strftime('%%Y-%%m-01')),
                                 ('delivery_date', '&lt;', (context_today() + relativedelta(months=1)).strftime('%%Y-%%m-01'))]"/>
                <group>
                    <filter string="Khách Hàng" name="group_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Mẫu May" name="group_style" context="{'group_by': 'style_id'}"/>
                    <filter string="Trạng Thái" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Tháng Giao" name="group_delivery" context="{'group_by': 'delivery_date:month'}"/>
                    <filter string="Tháng Đặt" name="group_order_date" context="{'group_by': 'order_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_garment_order" model="ir.actions.act_window">
        <field name="name">Đơn Hàng May</field>
        <field name="res_model">garment.order</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo đơn hàng may mới
            </p>
            <p>Quản lý đơn hàng may từ tiếp nhận đến giao hàng.</p>
        </field>
    </record>
</odoo>
