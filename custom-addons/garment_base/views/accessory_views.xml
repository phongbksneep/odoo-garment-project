<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_garment_accessory_form" model="ir.ui.view">
        <field name="name">garment.accessory.form</field>
        <field name="model">garment.accessory</field>
        <field name="arch" type="xml">
            <form string="Phụ Liệu">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Tên Phụ Liệu"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="accessory_type"/>
                            <field name="material"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="uom_id"/>
                            <field name="size"/>
                            <field name="unit_price"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="min_order_qty"/>
                            <field name="lead_time"/>
                        </group>
                        <group>
                            <field name="product_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Màu Có Sẵn">
                            <field name="color_ids" widget="many2many_tags"/>
                        </page>
                        <page string="Nhà Cung Cấp">
                            <field name="supplier_ids"/>
                        </page>
                        <page string="Ghi Chú">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_garment_accessory_list" model="ir.ui.view">
        <field name="name">garment.accessory.list</field>
        <field name="model">garment.accessory</field>
        <field name="arch" type="xml">
            <list string="Danh Sách Phụ Liệu">
                <field name="code"/>
                <field name="name"/>
                <field name="accessory_type"/>
                <field name="material"/>
                <field name="uom_id"/>
                <field name="unit_price"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_garment_accessory_search" model="ir.ui.view">
        <field name="name">garment.accessory.search</field>
        <field name="model">garment.accessory</field>
        <field name="arch" type="xml">
            <search string="Tìm Phụ Liệu">
                <field name="name"/>
                <field name="code"/>
                <field name="accessory_type"/>
                <filter string="Nút / Cúc" name="button" domain="[('accessory_type', '=', 'button')]"/>
                <filter string="Khóa Kéo" name="zipper" domain="[('accessory_type', '=', 'zipper')]"/>
                <filter string="Chỉ May" name="thread" domain="[('accessory_type', '=', 'thread')]"/>
                <filter string="Nhãn Mác" name="label" domain="[('accessory_type', '=', 'label')]"/>
                <group>
                    <filter string="Loại Phụ Liệu" name="group_type" context="{'group_by': 'accessory_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_garment_accessory" model="ir.actions.act_window">
        <field name="name">Phụ Liệu</field>
        <field name="res_model">garment.accessory</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Thêm phụ liệu mới
            </p>
            <p>Quản lý phụ liệu: nút, khóa kéo, chỉ, nhãn mác...</p>
        </field>
    </record>
</odoo>
