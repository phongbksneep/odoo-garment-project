<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_garment_fabric_form" model="ir.ui.view">
        <field name="name">garment.fabric.form</field>
        <field name="model">garment.fabric</field>
        <field name="arch" type="xml">
            <form string="Vải">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Tên Vải"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="fabric_type"/>
                            <field name="composition"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="width"/>
                            <field name="weight"/>
                            <field name="shrinkage"/>
                            <field name="unit_price"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="min_order_qty"/>
                            <field name="lead_time"/>
                        </group>
                        <group>
                            <field name="product_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Màu Có Sẵn">
                            <field name="color_ids" widget="many2many_tags"/>
                        </page>
                        <page string="Nhà Cung Cấp">
                            <field name="supplier_ids"/>
                        </page>
                        <page string="Ghi Chú">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_garment_fabric_list" model="ir.ui.view">
        <field name="name">garment.fabric.list</field>
        <field name="model">garment.fabric</field>
        <field name="arch" type="xml">
            <list string="Danh Sách Vải">
                <field name="code"/>
                <field name="name"/>
                <field name="fabric_type"/>
                <field name="composition"/>
                <field name="width"/>
                <field name="weight"/>
                <field name="unit_price"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_garment_fabric_search" model="ir.ui.view">
        <field name="name">garment.fabric.search</field>
        <field name="model">garment.fabric</field>
        <field name="arch" type="xml">
            <search string="Tìm Vải">
                <field name="name"/>
                <field name="code"/>
                <field name="fabric_type"/>
                <filter string="Cotton" name="cotton" domain="[('fabric_type', '=', 'cotton')]"/>
                <filter string="Polyester" name="polyester" domain="[('fabric_type', '=', 'polyester')]"/>
                <filter string="Dệt Kim" name="knit" domain="[('fabric_type', '=', 'knit')]"/>
                <filter string="Dệt Thoi" name="woven" domain="[('fabric_type', '=', 'woven')]"/>
                <group>
                    <filter string="Loại Vải" name="group_type" context="{'group_by': 'fabric_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_garment_fabric" model="ir.actions.act_window">
        <field name="name">Vải</field>
        <field name="res_model">garment.fabric</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Thêm loại vải mới
            </p>
            <p>Quản lý danh mục vải sử dụng trong sản xuất may.</p>
        </field>
    </record>
</odoo>
