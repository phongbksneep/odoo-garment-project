<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_garment_size_form" model="ir.ui.view">
        <field name="name">garment.size.form</field>
        <field name="model">garment.size</field>
        <field name="arch" type="xml">
            <form string="Size">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="size_type"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="chest"/>
                            <field name="waist"/>
                            <field name="hip"/>
                            <field name="length"/>
                            <field name="shoulder"/>
                            <field name="sleeve"/>
                            <field name="inseam"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_garment_size_list" model="ir.ui.view">
        <field name="name">garment.size.list</field>
        <field name="model">garment.size</field>
        <field name="arch" type="xml">
            <list string="Bảng Size">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="size_type"/>
                <field name="chest"/>
                <field name="waist"/>
                <field name="hip"/>
                <field name="length"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_garment_size" model="ir.actions.act_window">
        <field name="name">Bảng Size</field>
        <field name="res_model">garment.size</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
