<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_wash_symbol_list" model="ir.ui.view">
        <field name="name">garment.wash.symbol.list</field>
        <field name="model">garment.wash.symbol</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="category"/>
                <field name="instruction"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_wash_symbol_form" model="ir.ui.view">
        <field name="name">garment.wash.symbol.form</field>
        <field name="model">garment.wash.symbol</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="category"/>
                        </group>
                        <group>
                            <field name="instruction"/>
                            <field name="icon" widget="image" class="oe_avatar"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_wash_symbol_search" model="ir.ui.view">
        <field name="name">garment.wash.symbol.search</field>
        <field name="model">garment.wash.symbol</field>
        <field name="arch" type="xml">
            <search string="Tìm Ký Hiệu">
                <field name="name"/>
                <field name="code"/>
                <separator/>
                <filter string="Giặt" name="wash" domain="[('category', '=', 'wash')]"/>
                <filter string="Tẩy" name="bleach" domain="[('category', '=', 'bleach')]"/>
                <filter string="Sấy" name="dry" domain="[('category', '=', 'dry')]"/>
                <filter string="Ủi" name="iron" domain="[('category', '=', 'iron')]"/>
                <filter string="Giặt Khô" name="dryclean" domain="[('category', '=', 'dryclean')]"/>
                <separator/>
                <filter string="Đang Dùng" name="active" domain="[('active', '=', True)]"/>
                <filter string="Lưu Trữ" name="archived" domain="[('active', '=', False)]"/>
                <group name="groupby">
                    <filter string="Phân Loại" name="group_category" context="{'group_by': 'category'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_wash_symbol" model="ir.actions.act_window">
        <field name="name">Ký Hiệu Giặt Ủi</field>
        <field name="res_model">garment.wash.symbol</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Thêm ký hiệu giặt ủi mới
            </p>
        </field>
    </record>
</odoo>
