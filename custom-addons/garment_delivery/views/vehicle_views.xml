<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vehicle Views -->
    <record id="view_vehicle_tree" model="ir.ui.view">
        <field name="name">garment.vehicle.tree</field>
        <field name="model">garment.vehicle</field>
        <field name="arch" type="xml">
            <list decoration-muted="state == 'retired'"
                  decoration-warning="state == 'maintenance'">
                <field name="name"/>
                <field name="plate_number"/>
                <field name="vehicle_type"/>
                <field name="driver_id"/>
                <field name="max_weight"/>
                <field name="delivery_count"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'available'"
                       decoration-info="state == 'in_use'"
                       decoration-warning="state == 'maintenance'"
                       decoration-danger="state == 'retired'"/>
            </list>
        </field>
    </record>

    <record id="view_vehicle_form" model="ir.ui.view">
        <field name="name">garment.vehicle.form</field>
        <field name="model">garment.vehicle</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="plate_number"/>
                            <field name="vehicle_type"/>
                            <field name="driver_id"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="max_weight"/>
                            <field name="max_volume"/>
                            <field name="registration_date"/>
                            <field name="insurance_expiry"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lịch Sử Giao Hàng" name="deliveries">
                            <field name="delivery_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="partner_id"/>
                                    <field name="ship_to"/>
                                    <field name="total_qty"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="Ghi Chú" name="notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_vehicle_search" model="ir.ui.view">
        <field name="name">garment.vehicle.search</field>
        <field name="model">garment.vehicle</field>
        <field name="arch" type="xml">
            <search string="Tìm Phương Tiện">
                <field name="name"/>
                <field name="plate_number"/>
                <field name="driver_id"/>
                <separator/>
                <filter string="Sẵn Sàng" name="available" domain="[('state', '=', 'available')]"/>
                <filter string="Đang Dùng" name="in_use" domain="[('state', '=', 'in_use')]"/>
                <filter string="Bảo Trì" name="maintenance" domain="[('state', '=', 'maintenance')]"/>
                <filter string="Ngừng" name="retired" domain="[('state', '=', 'retired')]"/>
                <separator/>
                <filter string="Hết Bảo Hiểm" name="insurance_expired"
                        domain="[('insurance_expiry', '&lt;', context_today().strftime('%Y-%m-%d'))]"/>
                <group name="groupby">
                    <filter string="Loại Xe" name="group_type" context="{'group_by': 'vehicle_type'}"/>
                    <filter string="Trạng Thái" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Tài Xế" name="group_driver" context="{'group_by': 'driver_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_vehicle" model="ir.actions.act_window">
        <field name="name">Phương Tiện</field>
        <field name="res_model">garment.vehicle</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
