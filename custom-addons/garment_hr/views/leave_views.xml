<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Leave Tree -->
    <record id="view_leave_tree" model="ir.ui.view">
        <field name="name">garment.leave.tree</field>
        <field name="model">garment.leave</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="leave_type"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="days"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'submitted'"
                       decoration-success="state == 'approved'"
                       decoration-danger="state == 'refused'"/>
            </list>
        </field>
    </record>

    <!-- Leave Form -->
    <record id="view_leave_form" model="ir.ui.view">
        <field name="name">garment.leave.form</field>
        <field name="model">garment.leave</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit" type="object" string="Gửi Duyệt"
                            invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_approve" type="object" string="Duyệt"
                            invisible="state != 'submitted'" class="oe_highlight"/>
                    <button name="action_refuse" type="object" string="Từ Chối"
                            invisible="state != 'submitted'"/>
                    <button name="action_reset_draft" type="object" string="Về Nháp"
                            invisible="state not in ('submitted', 'refused')"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,submitted,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="department_id"/>
                            <field name="leave_type"/>
                        </group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="days"/>
                            <field name="approved_by"/>
                        </group>
                    </group>
                    <group>
                        <field name="reason"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_leave" model="ir.actions.act_window">
        <field name="name">Đơn Nghỉ Phép</field>
        <field name="res_model">garment.leave</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
