<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ======== Attendance Record Rules ======== -->

    <!-- Team Leader: Read/write attendance in own department -->
    <record id="rule_attendance_team_leader" model="ir.rule">
        <field name="name">Team Leader: Dept Attendance</field>
        <field name="model_id" ref="model_garment_attendance"/>
        <field name="domain_force">[('department_id','=',user.employee_id.department_id.id)]</field>
        <field name="groups" eval="[(4, ref('garment_base.group_garment_team_leader'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Dept Manager: All attendance read/write -->
    <record id="rule_attendance_dept_manager" model="ir.rule">
        <field name="name">Dept Manager: All Attendance</field>
        <field name="model_id" ref="model_garment_attendance"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('garment_base.group_garment_dept_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Admin: Full attendance access -->
    <record id="rule_attendance_admin" model="ir.rule">
        <field name="name">Admin: Full Attendance Access</field>
        <field name="model_id" ref="model_garment_attendance"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('garment_base.group_garment_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <!-- ======== Leave Record Rules ======== -->

    <!-- Team Leader: Read/write leave in own department -->
    <record id="rule_leave_team_leader" model="ir.rule">
        <field name="name">Team Leader: Dept Leave</field>
        <field name="model_id" ref="model_garment_leave"/>
        <field name="domain_force">[('department_id','=',user.employee_id.department_id.id)]</field>
        <field name="groups" eval="[(4, ref('garment_base.group_garment_team_leader'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Dept Manager: All leave, can approve -->
    <record id="rule_leave_dept_manager" model="ir.rule">
        <field name="name">Dept Manager: All Leave</field>
        <field name="model_id" ref="model_garment_leave"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('garment_base.group_garment_dept_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Admin: Full leave access -->
    <record id="rule_leave_admin" model="ir.rule">
        <field name="name">Admin: Full Leave Access</field>
        <field name="model_id" ref="model_garment_leave"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('garment_base.group_garment_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
</odoo>
