<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron: Check Late Orders - runs daily -->
        <record id="cron_check_late_orders" model="ir.cron">
            <field name="name">Garment: Kiểm tra đơn hàng trễ / Check Late Orders</field>
            <field name="model_id" ref="model_garment_alert_service"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_late_orders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
        </record>

        <!-- Cron: Check QC Fail Rate - runs daily -->
        <record id="cron_check_qc_fail_rate" model="ir.cron">
            <field name="name">Garment: Kiểm tra tỷ lệ lỗi QC / Check QC Fail Rate</field>
            <field name="model_id" ref="model_garment_alert_service"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_qc_fail_rate()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
        </record>

        <!-- Cron: Check Upcoming Deliveries - runs daily -->
        <record id="cron_check_upcoming_deliveries" model="ir.cron">
            <field name="name">Garment: Cảnh báo giao hàng sắp tới / Upcoming Deliveries</field>
            <field name="model_id" ref="model_garment_alert_service"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_upcoming_deliveries()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
        </record>
    </data>
</odoo>
