<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_export_payroll_wizard_form" model="ir.ui.view">
        <field name="name">garment.export.payroll.wizard.form</field>
        <field name="model">garment.export.payroll.wizard</field>
        <field name="arch" type="xml">
            <form string="Xuất Bảng Lương / Export Payroll">
                <group>
                    <group>
                        <field name="month"/>
                        <field name="year"/>
                    </group>
                    <group>
                        <field name="department_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <group invisible="not file_data">
                    <field name="file_name" invisible="1"/>
                    <field name="file_data" filename="file_name"/>
                </group>
                <footer>
                    <button name="action_export" string="Xuất Excel / Export" type="object" class="btn-primary"/>
                    <button string="Đóng / Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open wizard -->
    <record id="action_export_payroll_wizard" model="ir.actions.act_window">
        <field name="name">Xuất Bảng Lương / Export Payroll</field>
        <field name="res_model">garment.export.payroll.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu Item - add to HR/Payroll menu -->
    <menuitem id="menu_export_payroll"
        name="Xuất Excel Lương / Export Payroll"
        parent="garment_base.menu_garment_hr_main"
        action="action_export_payroll_wizard"
        sequence="90"/>
</odoo>
