<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ================================================================== -->
    <!-- Piece Rate Form -->
    <!-- ================================================================== -->
    <record id="view_piece_rate_form" model="ir.ui.view">
        <field name="name">garment.piece.rate.form</field>
        <field name="model">garment.piece.rate</field>
        <field name="arch" type="xml">
            <form string="Đơn Giá Khoán">
                <sheet>
                    <group>
                        <group>
                            <field name="style_id"/>
                            <field name="operation"/>
                            <field name="operation_detail"/>
                        </group>
                        <group>
                            <field name="rate_per_piece"/>
                            <field name="smv"/>
                            <field name="currency_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <field name="notes"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_piece_rate_list" model="ir.ui.view">
        <field name="name">garment.piece.rate.list</field>
        <field name="model">garment.piece.rate</field>
        <field name="arch" type="xml">
            <list string="Bảng Đơn Giá Khoán" editable="bottom">
                <field name="style_id"/>
                <field name="operation"/>
                <field name="operation_detail"/>
                <field name="rate_per_piece"/>
                <field name="smv"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_piece_rate_search" model="ir.ui.view">
        <field name="name">garment.piece.rate.search</field>
        <field name="model">garment.piece.rate</field>
        <field name="arch" type="xml">
            <search string="Tìm Đơn Giá">
                <field name="style_id"/>
                <field name="operation"/>
                <group>
                    <filter string="Mã Hàng" name="group_style"
                            context="{'group_by': 'style_id'}"/>
                    <filter string="Công Đoạn" name="group_op"
                            context="{'group_by': 'operation'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_piece_rate" model="ir.actions.act_window">
        <field name="name">Đơn Giá Khoán</field>
        <field name="res_model">garment.piece.rate</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Thiết lập đơn giá khoán cho từng mã hàng
            </p>
        </field>
    </record>
</odoo>
