<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="seq_production_plan" model="ir.sequence">
            <field name="name">Garment Production Plan</field>
            <field name="code">garment.production.plan</field>
            <field name="prefix">PLAN/%(year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="seq_capacity_planning" model="ir.sequence">
            <field name="name">Garment Capacity Planning</field>
            <field name="code">garment.capacity.planning</field>
            <field name="prefix">CAP/%(year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Cron: Daily Deadline Auto-Alert -->
        <record id="ir_cron_deadline_alert" model="ir.cron">
            <field name="name">Garment: Cảnh Báo Hạn Giao Hàng</field>
            <field name="model_id" ref="model_garment_production_plan"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_deadline_alerts()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>
