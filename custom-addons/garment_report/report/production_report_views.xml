<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ================================================================== -->
    <!-- Production Report Wizard Form -->
    <!-- ================================================================== -->
    <record id="view_production_report_wizard_form" model="ir.ui.view">
        <field name="name">garment.production.report.form</field>
        <field name="model">garment.production.report</field>
        <field name="arch" type="xml">
            <form string="Báo Cáo Sản Xuất">
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="sewing_line_ids" widget="many2many_tags"/>
                        <field name="style_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <footer>
                    <button name="action_generate_report" string="Xem Báo Cáo"
                            type="object" class="btn-primary"/>
                    <button string="Hủy" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_production_report_wizard" model="ir.actions.act_window">
        <field name="name">Báo Cáo Sản Xuất</field>
        <field name="res_model">garment.production.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
