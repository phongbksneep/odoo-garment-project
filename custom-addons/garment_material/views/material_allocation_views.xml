<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================= ACTIONS ========================= -->

    <record id="action_material_allocation" model="ir.actions.act_window">
        <field name="name">Phân Bổ NL Cho Đơn Hàng</field>
        <field name="res_model">garment.material.allocation</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo phiếu phân bổ nguyên liệu cho sản xuất
            </p>
        </field>
    </record>

    <!-- ========================= LIST VIEW ========================= -->

    <record id="view_material_allocation_list" model="ir.ui.view">
        <field name="name">garment.material.allocation.list</field>
        <field name="model">garment.material.allocation</field>
        <field name="arch" type="xml">
            <list decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="date"/>
                <field name="garment_order_id"/>
                <field name="production_order_id" optional="show"/>
                <field name="style_id"/>
                <field name="total_items"/>
                <field name="issued_by" optional="hide"/>
                <field name="received_by" optional="hide"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'confirmed'"
                       decoration-success="state == 'issued'"
                       decoration-danger="state == 'cancelled'"/>
            </list>
        </field>
    </record>

    <!-- ========================= FORM VIEW ========================= -->

    <record id="view_material_allocation_form" model="ir.ui.view">
        <field name="name">garment.material.allocation.form</field>
        <field name="model">garment.material.allocation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Xác Nhận"
                            type="object" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_issue" string="Xuất Kho"
                            type="object" class="oe_highlight"
                            invisible="state != 'confirmed'"/>
                    <button name="action_cancel" string="Hủy"
                            type="object"
                            invisible="state in ('issued', 'cancelled')"/>
                    <button name="action_reset_draft" string="Về Nháp"
                            type="object"
                            invisible="state not in ('cancelled',)"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirmed,issued"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group string="Đơn Hàng">
                            <field name="date"/>
                            <field name="garment_order_id"/>
                            <field name="production_order_id"/>
                            <field name="style_id"/>
                        </group>
                        <group string="Người Thực Hiện">
                            <field name="issued_by"/>
                            <field name="received_by"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Chi Tiết Phân Bổ NL" name="lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="material_type"/>
                                    <field name="fabric_id"/>
                                    <field name="description"/>
                                    <field name="color_id"/>
                                    <field name="unit"/>
                                    <field name="quantity_required" optional="show"/>
                                    <field name="quantity_issued"/>
                                    <field name="lot_number" optional="show"/>
                                    <field name="receipt_id" optional="show"/>
                                    <field name="notes" optional="hide"/>
                                </list>
                            </field>
                        </page>
                        <page string="Ghi Chú" name="notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ========================= SEARCH VIEW ========================= -->

    <record id="view_material_allocation_search" model="ir.ui.view">
        <field name="name">garment.material.allocation.search</field>
        <field name="model">garment.material.allocation</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="garment_order_id"/>
                <field name="production_order_id"/>
                <filter name="draft" string="Nháp"
                        domain="[('state', '=', 'draft')]"/>
                <filter name="issued" string="Đã Xuất Kho"
                        domain="[('state', '=', 'issued')]"/>
                <group>
                    <filter name="group_order" string="Đơn Hàng"
                            context="{'group_by': 'garment_order_id'}"/>
                    <filter name="group_date" string="Ngày"
                            context="{'group_by': 'date:month'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>
