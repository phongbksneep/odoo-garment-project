<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ================================================================== -->
    <!-- Corrective Action Plan Form -->
    <!-- ================================================================== -->
    <record id="view_corrective_action_form" model="ir.ui.view">
        <field name="name">garment.corrective.action.form</field>
        <field name="model">garment.corrective.action</field>
        <field name="arch" type="xml">
            <form string="Corrective Action Plan">
                <header>
                    <button name="action_start" string="Bắt Đầu" type="object"
                            class="btn-primary" invisible="state != 'open'"/>
                    <button name="action_submit" string="Nộp" type="object"
                            class="btn-primary" invisible="state != 'in_progress'"/>
                    <button name="action_verify" string="Xác Minh" type="object"
                            class="btn-success" invisible="state != 'submitted'"/>
                    <button name="action_cancel" string="Hủy" type="object"
                            invisible="state in ('done', 'cancelled')"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="open,in_progress,submitted,done"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Quá Hạn" bg_color="text-bg-danger"
                            invisible="not is_overdue"/>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="audit_id"/>
                            <field name="finding_id"/>
                            <field name="severity"/>
                        </group>
                        <group>
                            <field name="responsible_id"/>
                            <field name="deadline"/>
                            <field name="completion_date"/>
                            <field name="is_overdue" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Chi Tiết">
                            <group>
                                <field name="description" nolabel="1"/>
                            </group>
                            <group>
                                <field name="root_cause" nolabel="1"/>
                            </group>
                            <group>
                                <field name="corrective_action" nolabel="1"/>
                            </group>
                            <group>
                                <field name="preventive_action" nolabel="1"/>
                            </group>
                        </page>
                        <page string="Bằng Chứng">
                            <group>
                                <field name="evidence_file" filename="evidence_filename"/>
                                <field name="evidence_filename" invisible="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_corrective_action_list" model="ir.ui.view">
        <field name="name">garment.corrective.action.list</field>
        <field name="model">garment.corrective.action</field>
        <field name="arch" type="xml">
            <list string="Corrective Actions"
                  decoration-danger="is_overdue"
                  decoration-success="state == 'done'">
                <field name="name"/>
                <field name="audit_id"/>
                <field name="severity"/>
                <field name="description"/>
                <field name="responsible_id"/>
                <field name="deadline"/>
                <field name="state"/>
                <field name="is_overdue" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_corrective_action_search" model="ir.ui.view">
        <field name="name">garment.corrective.action.search</field>
        <field name="model">garment.corrective.action</field>
        <field name="arch" type="xml">
            <search string="Tìm CAP">
                <field name="name"/>
                <field name="audit_id"/>
                <field name="responsible_id"/>
                <filter string="Quá Hạn" name="overdue"
                        domain="[('deadline', '&lt;', context_today().strftime('%%Y-%%m-%%d')),('state', 'not in', ('done', 'cancelled'))]"/>
                <filter string="Đang Mở" name="open"
                        domain="[('state', 'in', ('open', 'in_progress'))]"/>
                <group>
                    <filter string="Mức Độ" name="group_severity"
                            context="{'group_by': 'severity'}"/>
                    <filter string="Audit" name="group_audit"
                            context="{'group_by': 'audit_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_corrective_action" model="ir.actions.act_window">
        <field name="name">Corrective Actions</field>
        <field name="res_model">garment.corrective.action</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Chưa có CAP nào
            </p>
        </field>
    </record>
</odoo>
