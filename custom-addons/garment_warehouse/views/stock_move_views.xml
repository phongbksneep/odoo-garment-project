<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_move_tree" model="ir.ui.view">
        <field name="name">garment.stock.move.tree</field>
        <field name="model">garment.stock.move</field>
        <field name="arch" type="xml">
            <list decoration-success="state == 'done'"
                  decoration-danger="state == 'cancelled'">
                <field name="name"/>
                <field name="move_type"/>
                <field name="warehouse_type"/>
                <field name="reason"/>
                <field name="date"/>
                <field name="partner_id" optional="show"/>
                <field name="total_qty" sum="Tổng SL"/>
                <field name="total_value" sum="Tổng GT"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="view_stock_move_form" model="ir.ui.view">
        <field name="name">garment.stock.move.form</field>
        <field name="model">garment.stock.move</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" type="object" string="Xác Nhận"
                            invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_done" type="object" string="Hoàn Thành"
                            invisible="state != 'confirmed'" class="oe_highlight"/>
                    <button name="action_cancel" type="object" string="Hủy"
                            invisible="state in ('done', 'cancelled')"/>
                    <button name="action_reset_draft" type="object" string="Về Nháp"
                            invisible="state not in ('confirmed', 'cancelled')"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="move_type"/>
                            <field name="warehouse_type"/>
                            <field name="reason"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="partner_id"/>
                            <field name="garment_order_id"/>
                            <field name="production_order_id"/>
                            <field name="responsible_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Chi Tiết" name="lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_type"/>
                                    <field name="description"/>
                                    <field name="fabric_id" optional="show"/>
                                    <field name="color_id" optional="show"/>
                                    <field name="unit"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="value" sum="Tổng"/>
                                    <field name="lot_number" optional="hide"/>
                                    <field name="notes" optional="hide"/>
                                </list>
                            </field>
                            <group class="oe_subtotal_footer">
                                <field name="total_qty"/>
                                <field name="total_value" class="oe_subtotal_footer_separator"/>
                            </group>
                        </page>
                        <page string="Ghi Chú" name="notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_stock_move_search" model="ir.ui.view">
        <field name="name">garment.stock.move.search</field>
        <field name="model">garment.stock.move</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="garment_order_id"/>
                <filter name="filter_in" string="Nhập Kho" domain="[('move_type', '=', 'in')]"/>
                <filter name="filter_out" string="Xuất Kho" domain="[('move_type', '=', 'out')]"/>
                <filter name="filter_transfer" string="Chuyển Kho" domain="[('move_type', '=', 'transfer')]"/>
                <separator/>
                <filter name="filter_material" string="Kho NPL" domain="[('warehouse_type', '=', 'material')]"/>
                <filter name="filter_finished" string="Kho TP" domain="[('warehouse_type', '=', 'finished')]"/>
                <filter name="filter_wip" string="Kho BTP" domain="[('warehouse_type', '=', 'wip')]"/>
                <separator/>
                <filter name="filter_draft" string="Nháp" domain="[('state', '=', 'draft')]"/>
                <filter name="filter_confirmed" string="Xác Nhận" domain="[('state', '=', 'confirmed')]"/>
                <filter name="filter_done" string="Hoàn Thành" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter name="filter_today" string="Hôm Nay"
                        domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_month" string="Tháng Này"
                        domain="[('date', '&gt;=', context_today().strftime('%Y-%m-01'))]"/>
                <group>
                    <filter name="group_type" string="Loại Phiếu" context="{'group_by': 'move_type'}"/>
                    <filter name="group_warehouse" string="Kho" context="{'group_by': 'warehouse_type'}"/>
                    <filter name="group_reason" string="Lý Do" context="{'group_by': 'reason'}"/>
                    <filter name="group_state" string="Trạng Thái" context="{'group_by': 'state'}"/>
                    <filter name="group_month" string="Tháng" context="{'group_by': 'date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_stock_in" model="ir.actions.act_window">
        <field name="name">Phiếu Nhập Kho</field>
        <field name="res_model">garment.stock.move</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('move_type', '=', 'in')]</field>
        <field name="context">{'default_move_type': 'in'}</field>
    </record>

    <record id="action_stock_out" model="ir.actions.act_window">
        <field name="name">Phiếu Xuất Kho</field>
        <field name="res_model">garment.stock.move</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('move_type', '=', 'out')]</field>
        <field name="context">{'default_move_type': 'out'}</field>
    </record>

    <record id="action_stock_all" model="ir.actions.act_window">
        <field name="name">Tất Cả Phiếu Kho</field>
        <field name="res_model">garment.stock.move</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_stock_move_search"/>
    </record>
</odoo>
