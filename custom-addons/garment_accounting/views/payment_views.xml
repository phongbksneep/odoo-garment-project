<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ===== PAYMENT VIEWS ===== -->
    <record id="view_payment_tree" model="ir.ui.view">
        <field name="name">garment.payment.tree</field>
        <field name="model">garment.payment</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="payment_type"/>
                <field name="partner_id"/>
                <field name="invoice_id"/>
                <field name="date"/>
                <field name="payment_method"/>
                <field name="amount" sum="Tổng"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="view_payment_form" model="ir.ui.view">
        <field name="name">garment.payment.form</field>
        <field name="model">garment.payment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" type="object" string="Xác Nhận"
                            invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_cancel" type="object" string="Hủy"
                            invisible="state != 'draft'"/>
                    <button name="action_reset_draft" type="object" string="Về Nháp"
                            invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="payment_type"/>
                            <field name="partner_id"/>
                            <field name="invoice_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="payment_method"/>
                            <field name="amount"/>
                            <field name="currency_id"/>
                            <field name="reference"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_payment" model="ir.actions.act_window">
        <field name="name">Phiếu Thanh Toán</field>
        <field name="res_model">garment.payment</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
