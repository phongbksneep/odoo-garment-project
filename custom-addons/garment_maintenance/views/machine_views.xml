<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ================================================================== -->
    <!-- Machine Form -->
    <!-- ================================================================== -->
    <record id="view_machine_form" model="ir.ui.view">
        <field name="name">garment.machine.form</field>
        <field name="model">garment.machine</field>
        <field name="arch" type="xml">
            <form string="Máy Móc">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object"
                                name="action_view_requests" icon="fa-wrench"
                                invisible="total_requests == 0">
                            <field name="total_requests" widget="statinfo"
                                   string="Yêu Cầu"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Hư Hỏng" bg_color="text-bg-danger"
                            invisible="status != 'broken'"/>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="machine_type"/>
                            <field name="brand"/>
                            <field name="model"/>
                            <field name="serial_number"/>
                        </group>
                        <group>
                            <field name="sewing_line_id"/>
                            <field name="responsible_id"/>
                            <field name="status"/>
                            <field name="purchase_date"/>
                            <field name="warranty_expiry"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="maintenance_interval"/>
                            <field name="last_maintenance_date"/>
                        </group>
                        <group>
                            <field name="next_maintenance_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lịch Sử Bảo Trì">
                            <field name="maintenance_request_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="request_type"/>
                                    <field name="request_date"/>
                                    <field name="technician_id"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="Ghi Chú">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_machine_list" model="ir.ui.view">
        <field name="name">garment.machine.list</field>
        <field name="model">garment.machine</field>
        <field name="arch" type="xml">
            <list string="Danh Sách Máy"
                  decoration-danger="status == 'broken'"
                  decoration-muted="status == 'retired'">
                <field name="name"/>
                <field name="machine_type"/>
                <field name="brand"/>
                <field name="serial_number"/>
                <field name="sewing_line_id"/>
                <field name="status"/>
                <field name="next_maintenance_date"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_machine_search" model="ir.ui.view">
        <field name="name">garment.machine.search</field>
        <field name="model">garment.machine</field>
        <field name="arch" type="xml">
            <search string="Tìm Máy">
                <field name="name"/>
                <field name="serial_number"/>
                <field name="sewing_line_id"/>
                <filter string="Đang Hoạt Động" name="active"
                        domain="[('status', '=', 'active')]"/>
                <filter string="Hư Hỏng" name="broken"
                        domain="[('status', '=', 'broken')]"/>
                <filter string="Cần Bảo Trì" name="due_maintenance"
                        domain="[('next_maintenance_date', '&lt;=', context_today().strftime('%%Y-%%m-%%d'))]"/>
                <group>
                    <filter string="Loại Máy" name="group_type"
                            context="{'group_by': 'machine_type'}"/>
                    <filter string="Chuyền" name="group_line"
                            context="{'group_by': 'sewing_line_id'}"/>
                    <filter string="Trạng Thái" name="group_status"
                            context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_machine" model="ir.actions.act_window">
        <field name="name">Máy Móc</field>
        <field name="res_model">garment.machine</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Thêm máy mới vào hệ thống
            </p>
        </field>
    </record>
</odoo>
