<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- =============== WASH CHEMICAL VIEWS =============== -->

    <!-- List View -->
    <record id="view_wash_chemical_list" model="ir.ui.view">
        <field name="name">garment.wash.chemical.list</field>
        <field name="model">garment.wash.chemical</field>
        <field name="arch" type="xml">
            <list>
                <field name="code"/>
                <field name="name"/>
                <field name="chemical_type"/>
                <field name="supplier_id"/>
                <field name="unit_price"/>
                <field name="uom"/>
                <field name="stock_qty"/>
                <field name="is_low_stock" column_invisible="True"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_wash_chemical_form" model="ir.ui.view">
        <field name="name">garment.wash.chemical.form</field>
        <field name="model">garment.wash.chemical</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Tên Hóa Chất"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="chemical_type"/>
                            <field name="supplier_id"/>
                        </group>
                        <group>
                            <field name="unit_price"/>
                            <field name="uom"/>
                            <field name="stock_qty"/>
                            <field name="min_stock"/>
                            <field name="is_low_stock"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="An Toàn">
                            <group>
                                <field name="safety_note"/>
                                <field name="msds_file" filename="msds_filename"/>
                                <field name="msds_filename" invisible="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_wash_chemical_search" model="ir.ui.view">
        <field name="name">garment.wash.chemical.search</field>
        <field name="model">garment.wash.chemical</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="chemical_type"/>
                <filter name="low_stock" string="Sắp Hết" domain="[('is_low_stock', '=', True)]"/>
                <group>
                    <filter name="group_type" context="{'group_by': 'chemical_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_wash_chemical" model="ir.actions.act_window">
        <field name="name">Hóa Chất Giặt</field>
        <field name="res_model">garment.wash.chemical</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Thêm hóa chất giặt mới
            </p>
            <p>Quản lý danh mục hóa chất sử dụng trong xưởng giặt.</p>
        </field>
    </record>
</odoo>
