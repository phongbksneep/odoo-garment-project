        <record id="finding_fire_exit" model="garment.audit.finding">
            <field name="audit_id" ref="audit_bsci"/>
            <field name="category">fire_safety</field>
            <field name="severity">major</field>
            <field name="description">Lối thoát hiểm tầng 2 bị cản trở bởi thùng carton. Cần dọn dẹp và duy trì thông thoáng.</field>
            <field name="evidence">Ảnh chụp lối thoát hiểm bị chắn ngày 15/02/2026. Nhân viên xác nhận hàng để từ ngày 10/02.</field>
        </record>
        <record id="finding_ot_hours" model="garment.audit.finding">
            <field name="audit_id" ref="audit_bsci"/>
            <field name="category">wages</field>
            <field name="severity">minor</field>
            <field name="description">3 công nhân chuyền 1 tăng ca vượt 60h/tháng (ghi nhận 65h) trong tháng 01/2026. Cần kiểm soát giờ OT.</field>
            <field name="evidence">Bảng chấm công tháng 01/2026, dòng CN Nguyễn Thị A, Trần Văn B, Lê Thị C.</field>
        </record>
        <record id="finding_chemical" model="garment.audit.finding">
            <field name="audit_id" ref="audit_bsci"/>
            <field name="category">chemical</field>
            <field name="severity">observation</field>
            <field name="description">Kho hóa chất giặt có MSDS nhưng chưa dịch sang tiếng Việt. Đề nghị bổ sung bản dịch.</field>
        </record>

        <!-- ============================================================ -->
        <!-- KẾ HOẠCH KHẮC PHỤC (garment.corrective.action)              -->
        <!-- ============================================================ -->

        <record id="cap_fire_exit" model="garment.corrective.action">
            <field name="name">CAP-2026-00001</field>
            <field name="audit_id" ref="audit_bsci"/>
            <field name="finding_id" ref="finding_fire_exit"/>
            <field name="severity">major</field>
            <field name="description">Lối thoát hiểm tầng 2 bị cản trở bởi thùng carton.</field>
            <field name="root_cause">Thiếu khu vực lưu trữ carton rỗng. Công nhân để tạm tại hành lang thoát hiểm.</field>
            <field name="corrective_action">1. Dọn dẹp lối thoát hiểm ngay lập tức.
2. Bố trí khu vực riêng để carton rỗng ở tầng 1.
3. Dán biển cấm để đồ tại lối thoát hiểm.</field>
            <field name="preventive_action">Kiểm tra hàng tuần lối thoát hiểm. Đào tạo PCCC cho toàn bộ CN mới.</field>
            <field name="responsible_id" ref="emp_hr_manager"/>
            <field name="deadline">2026-03-01</field>
            <field name="completion_date">2026-02-25</field>
            <field name="state">done</field>
        </record>
        <record id="cap_ot_hours" model="garment.corrective.action">
            <field name="name">CAP-2026-00002</field>
            <field name="audit_id" ref="audit_bsci"/>
            <field name="finding_id" ref="finding_ot_hours"/>
            <field name="severity">minor</field>
            <field name="description">Vượt giờ tăng ca quy định 60h/tháng cho 3 công nhân.</field>
            <field name="root_cause">Thiếu hệ thống cảnh báo tự động khi CN gần đạt giới hạn OT.</field>
            <field name="corrective_action">Thiết lập cảnh báo tự động khi CN đạt 50h OT/tháng. Báo cáo OT hàng tuần cho quản lý.</field>
            <field name="responsible_id" ref="emp_hr_manager"/>
            <field name="deadline">2026-03-15</field>
            <field name="state">in_progress</field>
        </record>

