        <!-- SHIPPING INSTRUCTION (garment.shipping.instruction)          -->
        <!-- ============================================================ -->

        <record id="si_polo_us" model="garment.shipping.instruction">
            <field name="packing_list_id" ref="packing_polo"/>
            <field name="shipper_name">Công Ty TNHH May Mặc Garment Factory</field>
            <field name="shipper_address">KCN Bình Dương, Thủ Dầu Một, Bình Dương, Việt Nam
Tel: +84-274-3812345 | Fax: +84-274-3812346</field>
            <field name="consignee_name">Global Fashion Inc.</field>
            <field name="consignee_address">123 Fashion Ave, New York, NY 10001, USA
Tel: +1-212-555-0100</field>
            <field name="notify_party">Same as Consignee
Global Fashion Inc.
123 Fashion Ave, New York, NY 10001, USA</field>
            <field name="port_of_loading">Cảng Cát Lái, TP.HCM</field>
            <field name="cargo_description">88 CARTONS OF MEN'S POLO SHIRTS
STYLE: Classic Polo - 100% Cotton Jersey
COLORS: White, Navy
SIZES: S/M/L/XL
TOTAL: 4,400 PCS
HS CODE: 6105.10.00</field>
            <field name="payment_term">lc</field>
            <field name="incoterm">fob</field>
            <field name="lc_number">LC-2025-GF-0001</field>
            <field name="doc_commercial_invoice" eval="True"/>
