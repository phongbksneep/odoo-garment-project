            <field name="layers">40</field>
            <field name="fabric_length">120.0</field>
            <field name="waste_percentage">4.5</field>
            <field name="cutter_id" ref="emp_cut_leader"/>
            <field name="state">done</field>
            <field name="notes">Cắt Polo White - Đợt 1</field>
        </record>

        <record id="cutting_order_polo_nvy" model="garment.cutting.order">
            <field name="production_order_id" ref="prod_order_polo"/>
            <field name="fabric_id" ref="fabric_cotton_jersey"/>
            <field name="color_id" ref="garment_base.color_navy"/>
            <field name="planned_qty">2000</field>
            <field name="layers">35</field>
            <field name="fabric_length">100.0</field>
            <field name="waste_percentage">5.0</field>
            <field name="cutter_id" ref="emp_cut_1"/>
            <field name="state">cutting</field>
            <field name="notes">Cắt Polo Navy - Đang thực hiện</field>
        </record>

        <record id="cutting_order_tshirt_blk" model="garment.cutting.order">
            <field name="production_order_id" ref="prod_order_tshirt"/>
            <field name="fabric_id" ref="fabric_poly_cotton"/>
            <field name="color_id" ref="garment_base.color_black"/>
            <field name="planned_qty">1500</field>
            <field name="layers">30</field>
            <field name="fabric_length">80.0</field>
            <field name="waste_percentage">4.0</field>
            <field name="cutter_id" ref="emp_cut_2"/>
            <field name="state">confirmed</field>
            <field name="notes">Cắt T-Shirt đen cho đơn EU</field>
        </record>

        <!-- ============================================================ -->
        <!-- CHỨNG NHẬN XUẤT XỨ (garment.certificate.origin)             -->
        <!-- ============================================================ -->

        <record id="co_polo_form_d" model="garment.certificate.origin">
            <field name="packing_list_id" ref="packing_polo"/>
            <field name="co_type">eur1</field>
            <field name="exporter_name">Công Ty TNHH May Mặc Garment Factory</field>
            <field name="exporter_address">KCN Bình Dương, Thủ Dầu Một, Bình Dương, Việt Nam</field>
            <field name="importer_name">Global Fashion Inc.</field>
            <field name="importer_address">123 Fashion Ave, New York, NY 10001, USA</field>
            <field name="country_of_origin">Vietnam</field>
            <field name="destination_country">United States</field>
            <field name="transport_means">Tàu Biển - COSCO SHIPPING</field>
            <field name="port_of_loading">Cảng Cát Lái, TP.HCM</field>
            <field name="issuing_authority">Phòng Thương Mại &amp; Công Nghiệp Việt Nam (VCCI)</field>
            <field name="reference_no">VN-CO-2025-0001</field>
            <field name="invoice_number">INV-2025-0001</field>
            <field name="state">issued</field>
            <field name="notes">C/O cho đơn Polo xuất đi Mỹ - EVFTA EUR.1</field>
        </record>

        <record id="co_polo_line1" model="garment.certificate.origin.line">
            <field name="certificate_id" ref="co_polo_form_d"/>
            <field name="sequence">10</field>
            <field name="description">Men's Cotton Polo Shirt - White (S/M/L/XL)</field>
            <field name="hs_code">6105.10.00</field>
            <field name="quantity">2400</field>
            <field name="uom">PCS</field>
            <field name="weight">720.0</field>
            <field name="fob_value">26400.00</field>
            <field name="origin_criteria">pe</field>
        </record>

        <record id="co_polo_line2" model="garment.certificate.origin.line">
            <field name="certificate_id" ref="co_polo_form_d"/>
            <field name="sequence">20</field>
            <field name="description">Men's Cotton Polo Shirt - Navy (S/M/L/XL)</field>
            <field name="hs_code">6105.10.00</field>
            <field name="quantity">2000</field>
            <field name="uom">PCS</field>
            <field name="weight">600.0</field>
            <field name="fob_value">22000.00</field>
            <field name="origin_criteria">pe</field>
        </record>

        <!-- C/O thứ hai - cho đơn T-Shirt EU -->
        <record id="co_tshirt_rcep" model="garment.certificate.origin">
            <field name="packing_list_id" ref="packing_polo"/>
            <field name="co_type">rcep</field>
            <field name="exporter_name">Công Ty TNHH May Mặc Garment Factory</field>
            <field name="exporter_address">KCN Bình Dương, Thủ Dầu Một, Bình Dương, Việt Nam</field>
            <field name="importer_name">Euro Style GmbH</field>
            <field name="importer_address">Modezentrum 45, 40213 Düsseldorf, Germany</field>
            <field name="country_of_origin">Vietnam</field>
            <field name="destination_country">Germany</field>
            <field name="transport_means">Tàu Biển - MSC</field>
            <field name="port_of_loading">Cảng Cát Lái, TP.HCM</field>
            <field name="issuing_authority">Phòng Thương Mại &amp; Công Nghiệp Việt Nam (VCCI)</field>
            <field name="reference_no">VN-CO-2025-0002</field>
            <field name="invoice_number">INV-2025-0002</field>
            <field name="state">draft</field>
            <field name="notes">C/O cho đơn T-Shirt xuất đi Đức - RCEP</field>
