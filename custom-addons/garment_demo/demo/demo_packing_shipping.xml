        <record id="co_tshirt_line1" model="garment.certificate.origin.line">
            <field name="certificate_id" ref="co_tshirt_rcep"/>
            <field name="sequence">10</field>
            <field name="description">Men's Basic T-Shirt - Black (M/L)</field>
            <field name="hs_code">6109.10.00</field>
            <field name="quantity">1500</field>
            <field name="uom">PCS</field>
            <field name="weight">375.0</field>
            <field name="fob_value">12750.00</field>
            <field name="origin_criteria">rvc</field>
        </record>

        <record id="co_tshirt_line2" model="garment.certificate.origin.line">
            <field name="certificate_id" ref="co_tshirt_rcep"/>
