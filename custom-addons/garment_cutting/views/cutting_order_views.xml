<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ================================================================== -->
    <!-- Cutting Order Advanced Form -->
    <!-- ================================================================== -->
    <record id="view_cutting_order_adv_form" model="ir.ui.view">
        <field name="name">garment.cutting.order.adv.form</field>
        <field name="model">garment.cutting.order.adv</field>
        <field name="arch" type="xml">
            <form string="Lệnh Cắt Nâng Cao">
                <header>
                    <button name="action_start_spreading" string="Bắt Đầu Trải Vải" type="object"
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_start_cutting" string="Bắt Đầu Cắt" type="object"
                            class="btn-primary" invisible="state != 'spreading'"/>
                    <button name="action_start_numbering" string="Đánh Số / Bó Hàng" type="object"
                            class="btn-primary" invisible="state != 'cutting'"/>
                    <button name="action_done" string="Hoàn Thành" type="object"
                            class="btn-success" invisible="state != 'numbering'"/>
                    <button name="action_cancel" string="Hủy" type="object"
                            invisible="state in ('done', 'cancelled')"/>
                    <button name="action_reset_draft" string="Đặt Lại" type="object"
                            invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,spreading,cutting,numbering,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="production_order_id"/>
                            <field name="garment_order_id"/>
                            <field name="style_id"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="fabric_id"/>
                            <field name="fabric_color"/>
                            <field name="cutter_id"/>
                            <field name="table_no"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="marker_length"/>
                            <field name="marker_width"/>
                        </group>
                        <group>
                            <field name="marker_efficiency" widget="progressbar"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Trải Vải (Spreading)">
                            <field name="layer_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="fabric_roll_no"/>
                                    <field name="lot_id"/>
                                    <field name="length"/>
                                    <field name="shade"/>
                                    <field name="defects_found"/>
                                    <field name="splice_count"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                            <group>
                                <group>
                                    <field name="total_layers"/>
                                    <field name="total_fabric_used"/>
                                </group>
                            </group>
                        </page>
                        <page string="Bó Hàng (Bundles)">
                            <field name="bundle_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="bundle_no"/>
                                    <field name="size_id"/>
                                    <field name="color_id"/>
                                    <field name="quantity"/>
                                    <field name="layer_from"/>
                                    <field name="layer_to"/>
                                    <field name="sewing_line_id"/>
                                    <field name="is_issued"/>
                                    <field name="issued_date"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                            <group>
                                <group>
                                    <field name="total_bundles"/>
                                    <field name="total_pieces_cut"/>
                                </group>
                                <group>
                                    <field name="defective_pieces"/>
                                    <field name="wastage_kg"/>
                                </group>
                            </group>
                        </page>
                        <page string="Ghi Chú">
                            <field name="notes" placeholder="Ghi chú thêm..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ================================================================== -->
    <!-- List View -->
    <!-- ================================================================== -->
    <record id="view_cutting_order_adv_list" model="ir.ui.view">
        <field name="name">garment.cutting.order.adv.list</field>
        <field name="model">garment.cutting.order.adv</field>
        <field name="arch" type="xml">
            <list string="Lệnh Cắt Nâng Cao" decoration-info="state == 'draft'"
                  decoration-warning="state in ('spreading', 'cutting')"
                  decoration-success="state == 'done'">
                <field name="name"/>
                <field name="production_order_id"/>
                <field name="style_id"/>
                <field name="fabric_id"/>
                <field name="date"/>
                <field name="total_layers"/>
                <field name="total_pieces_cut"/>
                <field name="marker_efficiency"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- ================================================================== -->
    <!-- Search View -->
    <!-- ================================================================== -->
    <record id="view_cutting_order_adv_search" model="ir.ui.view">
        <field name="name">garment.cutting.order.adv.search</field>
        <field name="model">garment.cutting.order.adv</field>
        <field name="arch" type="xml">
            <search string="Tìm Lệnh Cắt">
                <field name="name"/>
                <field name="production_order_id"/>
                <field name="style_id"/>
                <filter string="Đang Xử Lý" name="in_process"
                        domain="[('state', 'in', ('spreading', 'cutting', 'numbering'))]"/>
                <filter string="Hoàn Thành" name="done" domain="[('state', '=', 'done')]"/>
                <group>
                    <filter string="Style" name="group_style" context="{'group_by': 'style_id'}"/>
                    <filter string="Ngày" name="group_date" context="{'group_by': 'date'}"/>
                    <filter string="Trạng Thái" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ================================================================== -->
    <!-- Action -->
    <!-- ================================================================== -->
    <record id="action_cutting_order_adv" model="ir.actions.act_window">
        <field name="name">Lệnh Cắt Nâng Cao</field>
        <field name="res_model">garment.cutting.order.adv</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_in_process': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Tạo lệnh cắt nâng cao mới</p>
            <p>Quản lý trải vải, sơ đồ cắt, bó hàng.</p>
        </field>
    </record>
</odoo>
