<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_qc_inspection_form" model="ir.ui.view">
        <field name="name">garment.qc.inspection.form</field>
        <field name="model">garment.qc.inspection</field>
        <field name="arch" type="xml">
            <form string="Phiếu Kiểm Tra Chất Lượng">
                <header>
                    <button name="action_start" string="Bắt Đầu Kiểm" type="object"
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_done" string="Hoàn Thành" type="object"
                            class="btn-success" invisible="state != 'in_progress'"/>
                    <button name="action_cancel" string="Hủy" type="object"
                            invisible="state in ('done', 'cancelled')"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="inspection_type"/>
                            <field name="production_order_id"/>
                            <field name="garment_order_id"/>
                            <field name="style_id"/>
                            <field name="sewing_line_id"/>
                        </group>
                        <group>
                            <field name="inspector_id"/>
                            <field name="inspection_date"/>
                            <field name="aql_level"/>
                            <field name="result"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="lot_size"/>
                            <field name="sample_size"/>
                            <field name="inspected_qty"/>
                        </group>
                        <group>
                            <field name="passed_qty"/>
                            <field name="failed_qty"/>
                            <field name="pass_rate" widget="progressbar"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="total_defects"/>
                        </group>
                        <group>
                            <field name="minor_defects"/>
                            <field name="major_defects"/>
                            <field name="critical_defects"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Chi Tiết Lỗi">
                            <field name="defect_line_ids">
                                <list editable="bottom">
                                    <field name="defect_type_id"/>
                                    <field name="severity"/>
                                    <field name="quantity"/>
                                    <field name="location"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                        <page string="Nhận Xét">
                            <field name="notes"/>
                        </page>
                        <page string="Biện Pháp Khắc Phục">
                            <field name="corrective_actions"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_qc_inspection_list" model="ir.ui.view">
        <field name="name">garment.qc.inspection.list</field>
        <field name="model">garment.qc.inspection</field>
        <field name="arch" type="xml">
            <list string="Phiếu QC" decoration-success="result == 'pass'"
                  decoration-danger="result == 'fail'">
                <field name="name"/>
                <field name="inspection_type"/>
                <field name="production_order_id"/>
                <field name="style_id"/>
                <field name="inspector_id"/>
                <field name="inspection_date"/>
                <field name="inspected_qty"/>
                <field name="passed_qty"/>
                <field name="pass_rate"/>
                <field name="total_defects"/>
                <field name="result"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_qc_inspection_search" model="ir.ui.view">
        <field name="name">garment.qc.inspection.search</field>
        <field name="model">garment.qc.inspection</field>
        <field name="arch" type="xml">
            <search string="Tìm Phiếu QC">
                <field name="name"/>
                <field name="production_order_id"/>
                <field name="inspector_id"/>
                <filter string="QC Inline" name="inline" domain="[('inspection_type', '=', 'inline')]"/>
                <filter string="QC Final" name="final" domain="[('inspection_type', '=', 'final')]"/>
                <filter string="AQL" name="aql" domain="[('inspection_type', '=', 'aql')]"/>
                <separator/>
                <filter string="Đạt" name="pass" domain="[('result', '=', 'pass')]"/>
                <filter string="Không Đạt" name="fail" domain="[('result', '=', 'fail')]"/>
                <group>
                    <filter string="Loại Kiểm" name="group_type" context="{'group_by': 'inspection_type'}"/>
                    <filter string="Kết Quả" name="group_result" context="{'group_by': 'result'}"/>
                    <filter string="QC" name="group_inspector" context="{'group_by': 'inspector_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_qc_inspection" model="ir.actions.act_window">
        <field name="name">Kiểm Tra Chất Lượng</field>
        <field name="res_model">garment.qc.inspection</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Tạo phiếu QC mới</p>
        </field>
    </record>
</odoo>
